#!/usr/bin/env bash

set -ev

if [ "$CIRCLE_BRANCH" ];
then
  /home/circleci/blt/vendor/bin/blt artifact:deploy --commit-msg "Automated commit by Circle CI for Build ${CIRCLE_BUILD_NUM}" --branch "${CIRCLE_BRANCH}-build" --ignore-dirty --no-interaction --verbose
elif [ "$CIRCLE_TAG" ]  ; then
  /home/circleci/blt/vendor/bin/blt artifact:deploy --commit-msg "Automated commit by Circle CI for Build ${CIRCLE_BUILD_NUM}" --branch "${CIRCLE_BRANCH}-build" --ignore-dirty --no-interaction --verbose
fi

set +v
